%header
  %h1 Upload a beat

= form_for @beat do |f|
  = render 'shared/error_messages', :object => f.object
  = render 'shared/audio_field', :form => f
  
  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :description
    %br
    = f.text_area :description

  .actions= f.submit 'Upload'
